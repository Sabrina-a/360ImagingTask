<%- include('./header') %>
<%- include('./navbar') %>


<div class="container mt-5 ">
   <div class="border border-primary rounded p-3">
    <p class="text-muted">Published At : <%=blog.postedAt%></p>
    <h2><%=blog.title%></h2>
    <p class="mt-5"><%=blog.content%></p>
   </div>
   
    <% blog.comments.forEach( comment => { %>
        <div class="card mt-3">
            <div class="card-body">
            <p class="text-muted">Commented At: <%= comment.commentedAt %></p>    
            <p class="card-text"><%= comment.content %></p>
            <a href="../comment/edit/<%=comment._id%>/<%=blog._id%>" class="btn btn-warning">Edit</a>
            <a href="../comment/delete/<%=comment._id%>/<%=blog._id%>" class="btn btn-danger">Delete</a>
            </div>
        </div>
        
    <%})%>
    <div class="mt-5">
        <h3 class="mt-3">Add  Your Comment Here...</h3>
        <form action="/post/<%=blog._id%>" method="POST">
        <textarea name="comment" cols="10" rows="5" class="form-control mt-3" placeholder="enter comment here..." required></textarea>
        <input type="submit" value="Add Comment" class="mt-3 mb-3 btn btn-md btn-primary">
    </form>
    </div>
</div>




<%- include('./footer') %>  