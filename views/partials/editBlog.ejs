<%- include('./navbar') %>

<div class="container mt-5">
    <h3 class="mt-3">Edit Your Blog Here...</h3>
    <form action="/edit/<%=blog._id%>" method="POST">
    <input type="text" name="title" value="<%=blog.title%>" class="form-control" required>
    <textarea name="content"  cols="30" rows="10" class="form-control mt-3" required><%=blog.content%></textarea>
    <input type="submit" value="Save Changes " class="mt-5 btn btn-md btn-danger">
</form>
</div>

